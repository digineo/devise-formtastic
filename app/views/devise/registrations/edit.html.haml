%h2= t("devise.registrations.settings")

= semantic_form_for resource, :url => registration_path(resource_name) do |f|

  = f.inputs do
    = f.input :email, :input_html => {:autofocus => true}
    = f.input :password, :required => false, :input_html => {:autocomplete => "off"}, :hint => t("devise.registrations.password_hint")
    = f.input :password_confirmation, :required => false
    = f.input :current_password, :required => true, :hint => t("devise.registrations.current_password_hint")
  
  = f.actions do
    = f.action :submit, :label => t("devise.registrations.update"), :button_html => { :disable_with => t(:wait) }

%h3= t("devise.registrations.cancel")
%p
  = t("devise.registrations.unhappy")
  #{link_to t("devise.registrations.cancel"), registration_path(resource_name), :confirm => t("devise.registrations.cancel_confirmation"), :method => :delete}.

= link_to "Back", :back
