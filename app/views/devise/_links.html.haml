%ul
- if controller_name != 'sessions'
  %li= link_to t("devise.sessions.sign_in"), new_session_path(resource_name)

- if devise_mapping.registerable? && controller_name != 'registrations'
  %li= link_to t("devise.registrations.sign_up"), new_registration_path(resource_name)

- if devise_mapping.recoverable? && controller_name != 'passwords'
  %li= link_to t("devise.passwords.forgot_password"), new_password_path(resource_name)

- if devise_mapping.confirmable? && controller_name != 'confirmations'
  %li= link_to t("devise.confirmations.instructions_missing"), new_confirmation_path(resource_name)

- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
  %li= link_to t("devise.unlocks.instructions_missing"), new_unlock_path(resource_name)

- if devise_mapping.omniauthable?
  - resource_class.omniauth_providers.each do |provider|
    %li= link_to t("devise.sessions.sign_in_provider", provider: t("devise.providers.#{provider}", default: provider.to_s.titleize)) , omniauth_authorize_path(resource_name, provider)
